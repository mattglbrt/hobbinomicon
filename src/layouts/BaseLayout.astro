---
import "../styles/global.css";
const { title = "Hobbinomicon" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <slot name="head" />

  <script type="module" src="/src/scripts/autoAuth.js"></script>
  </head>
  <body class="flex flex-col min-h-screen">

    <!-- Navigation -->
    <nav class="bg-blue-600">
      <div class="container mx-auto flex justify-between items-center px-4 py-4">
        <!-- Logo (white text) -->
        <a href="/" class="text-2xl font-heading font-bold text-white">Hobbinomicon</a>

        <!-- Desktop Menu (white text) -->
        <div class="hidden md:flex space-x-8">
          <a href="/" class="text-white hover:underline">Home</a>
          <a href="/games" class="text-white hover:underline">Games</a>
          <a href="/stores" class="text-white hover:underline">Stores</a>
        </div>

        <!-- Mobile Menu Button -->
        <div class="md:hidden">
          <button id="menu-button" class="focus:outline-none text-white">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Menu Dropdown -->
      <div id="mobile-menu" class="hidden md:hidden bg-blue-700 px-4 py-2 space-y-2">
        <a href="/" class="block text-white hover:underline">Home</a>
        <a href="/games" class="block text-white hover:underline">Games</a>
        <a href="/stores" class="block text-white hover:underline">Stores</a>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-100 text-center text-gray-600 py-6 text-sm">
      &copy; {new Date().getFullYear()} Hobbinomicon. All rights reserved.
    </footer>

    <!-- Small JavaScript to toggle the mobile menu -->
    <script>
      const menuButton = document.getElementById('menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      menuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    </script>

  </body>
</html>
