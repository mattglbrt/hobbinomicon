---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  lastUpdated: string;
}

const { title, lastUpdated } = Astro.props;
---

<BaseLayout title={`${title} - The Hobbinomicon`}>
  <Header theme="light" />

  <main class="min-h-screen bg-parchment dark:bg-parchment-dark">
    <div class="max-w-4xl mx-auto px-6 py-24">
      <h1 class="text-5xl md:text-6xl font-heading font-bold text-ink dark:text-ink-dark mb-8">{title}</h1>
      <p class="text-ink/60 dark:text-ink-dark/60 mb-12">Last Updated: {lastUpdated}</p>

      <div class="prose prose-lg max-w-none">
        <slot />
      </div>
    </div>
  </main>

  <Footer />
</BaseLayout>
