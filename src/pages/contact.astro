---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import HeroHeader from '../components/HeroHeader.astro';
import FormField from '../components/FormField.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
  title="Contact - The Hobbinomicon"
  description="Get in touch with The Hobbinomicon. Send feedback, suggestions, or questions about miniature painting, wargaming, and hobby content."
>
  <Header theme="light" />

  <main id="main-content" class="min-h-screen bg-parchment dark:bg-parchment-dark">
    <HeroHeader
      title="Get in Touch"
      subtitle="Questions, suggestions, or just want to say hello?"
      backLink={{ href: "/", text: "Back to Home" }}
    />

    <!-- Main Content -->
    <article class="max-w-3xl mx-auto px-6 py-16 md:py-24">
      <!-- Introduction -->
      <div class="prose prose-lg max-w-none mb-12">
        <p class="text-xl text-ink dark:text-ink-dark leading-relaxed mb-8">
          I'd love to hear from you! Whether you have feedback on a tutorial, a resource to suggest,
          questions about a technique, or just want to connect with a fellow hobbyist, drop me a message below.
        </p>
      </div>

      <!-- Contact Form -->
      <div class="bg-white/50 dark:bg-ink-dark/10 backdrop-blur-sm p-8 md:p-12 rounded-lg border-2 border-ink/10 dark:border-ink-dark/10">
        <form
          name="contact"
          method="POST"
          data-netlify="true"
          netlify-honeypot="bot-field"
          action="/contact-success"
          class="space-y-6"
        >
          <!-- Hidden fields for Netlify -->
          <input type="hidden" name="form-name" value="contact" />
          <p class="hidden">
            <label>
              Don't fill this out if you're human: <input name="bot-field" />
            </label>
          </p>

          <FormField
            id="name"
            name="name"
            label="Name"
            type="text"
            required
            placeholder="Your name"
          />

          <FormField
            id="email"
            name="email"
            label="Email"
            type="email"
            required
            placeholder="your.email@example.com"
          />

          <FormField
            id="subject"
            name="subject"
            label="Subject"
            type="text"
            required
            placeholder="What's this about?"
          />

          <FormField
            id="message"
            name="message"
            label="Message"
            type="textarea"
            required
            placeholder="Your message..."
            rows={6}
          />

          <!-- Submit Button -->
          <div class="pt-4">
            <button
              type="submit"
              class="w-full md:w-auto px-8 py-4 bg-ink dark:bg-ink-dark text-white font-heading font-bold rounded-lg hover:bg-ink/90 dark:hover:bg-ink-dark/90 transition-colors focus:outline-none focus:ring-4 focus:ring-ink/20 dark:focus:ring-ink-dark/20"
            >
              Send Message
            </button>
          </div>
        </form>
      </div>

      <!-- Additional Info -->
      <div class="mt-12 text-center">
        <p class="text-ink/60 dark:text-ink-dark/60 italic">
          I'll get back to you as soon as possible. Thanks for reaching out!
        </p>
      </div>
    </article>

    <Footer />
  </main>
</BaseLayout>
