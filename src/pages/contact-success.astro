---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
  title="Message Sent - The Hobbinomicon"
  description="Your message has been sent successfully."
>
  <Header theme="light" />

  <main id="main-content" class="min-h-screen bg-parchment">
    <!-- Hero Section -->
    <section class="relative bg-ink text-white py-24 md:py-32 overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0 bg-gradient-to-br from-parchment/20 to-transparent"></div>
      </div>

      <div class="max-w-4xl mx-auto px-6 relative z-10 text-center">
        <div class="inline-block mb-6">
          <svg class="w-20 h-20 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-heading font-bold mb-6">
          Message Sent!
        </h1>
        <p class="text-2xl md:text-3xl text-white/90 italic font-serif leading-relaxed">
          Thanks for reaching out.
        </p>
      </div>
    </section>

    <!-- Main Content -->
    <article class="max-w-3xl mx-auto px-6 py-16 md:py-24 text-center">
      <div class="bg-white/50 backdrop-blur-sm p-12 md:p-16 rounded-lg border-2 border-ink/10 mb-12">
        <p class="text-2xl text-ink leading-relaxed mb-8">
          Your message has been successfully sent. I'll get back to you as soon as possible!
        </p>
        <p class="text-lg text-ink/70 mb-8">
          In the meantime, feel free to explore more content on the site.
        </p>

        <div class="flex flex-wrap gap-4 justify-center">
          <a
            href="/"
            class="inline-block px-8 py-4 bg-ink text-white font-heading font-bold rounded-lg hover:bg-ink/90 transition-colors"
          >
            Back to Home
          </a>
          <a
            href="/blog"
            class="inline-block px-8 py-4 bg-white border-2 border-ink/20 text-ink font-heading font-bold rounded-lg hover:border-ink/40 transition-colors"
          >
            Browse Blog
          </a>
          <a
            href="/categories/resources"
            class="inline-block px-8 py-4 bg-white border-2 border-ink/20 text-ink font-heading font-bold rounded-lg hover:border-ink/40 transition-colors"
          >
            View Resources
          </a>
        </div>
      </div>
    </article>

    <Footer />
  </main>
</BaseLayout>
