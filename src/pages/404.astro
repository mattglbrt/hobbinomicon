---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/global.css";
---

<BaseLayout title="Page Not Found">
  <main class="flex flex-col items-center justify-center min-h-screen px-6 py-16 text-center">
    <h1 class="text-5xl font-bold mb-4">404</h1>
    <p class="text-lg mb-8">Sorry, the page you are looking for does not exist.</p>
    <a href="/" class="bg-primary hover:bg-primary-dark text-white font-bold py-2 px-6 rounded">
      Go Home
    </a>
  </main>
</BaseLayout>
