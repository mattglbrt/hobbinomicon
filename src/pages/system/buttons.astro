---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="py-12">
      <Text
        tag="h1"
        variant="textBase"
        class="text-base-900 font-display font-medium">Buttons</Text
      >
      <div
        class="grid grid-cols-3 gap-12 text-base-400 relative before:absolute after:absolute before:bg-base-950 after:bg-base-950/10 before:top-0 before:left-0 before:h-px before:w-6 after:top-0 after:right-0 after:left-8 after:h-px pt-4 mt-2"
      >
        <div class="py-4">
          <Text
            tag="p"
            variant="textXS"
            class="text-base-900 uppercase font-medium"
          >
            Default
          </Text>
          <div class="flex flex-col gap-4 mt-2">
            <Button class="w-auto" size="xs" variant="default"
              >Default XS</Button
            >
            <Button class="w-auto" size="sm" variant="default"
              >Default SM</Button
            >
            <Button class="w-auto" size="base" variant="default"
              >Default Base</Button
            >
            <Button class="w-auto" size="md" variant="default"
              >Default MD</Button
            >
            <Button class="w-auto" size="lg" variant="default"
              >Default LG</Button
            >
            <Button class="w-auto" size="xl" variant="default"
              >Default XL</Button
            >
          </div>
        </div>
        <div class="py-4">
          <Text
            tag="p"
            variant="textXS"
            class="text-base-900 uppercase font-medium"
          >
            Accent
          </Text>
          <div class="flex flex-col gap-4 mt-2">
            <Button class="w-auto" size="xs" variant="accent">Accent XS</Button>
            <Button class="w-auto" size="sm" variant="accent">Accent SM</Button>
            <Button class="w-auto" size="base" variant="accent"
              >Accent Base</Button
            >
            <Button class="w-auto" size="md" variant="accent">Accent MD</Button>
            <Button class="w-auto" size="lg" variant="accent">Accent LG</Button>
            <Button class="w-auto" size="xl" variant="accent">Accent XL</Button>
          </div>
        </div>
        <div class="py-4">
          <Text
            tag="p"
            variant="textXS"
            class="text-base-900 uppercase font-medium"
          >
            Muted
          </Text>
          <div class="flex flex-col gap-4 mt-2">
            <Button class="w-auto" size="xs" variant="muted">Muted XS</Button>
            <Button class="w-auto" size="sm" variant="muted">Muted SM</Button>
            <Button class="w-auto" size="base" variant="muted"
              >Muted Base</Button
            >
            <Button class="w-auto" size="md" variant="muted">Muted MD</Button>
            <Button class="w-auto" size="lg" variant="muted">Muted LG</Button>
            <Button class="w-auto" size="xl" variant="muted">Muted XL</Button>
          </div>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
