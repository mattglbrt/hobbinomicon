---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
  title="Secret Toad - The Hobbinomicon"
  description="A mysterious toad with a special license for spreading pestilence across the world."
>
  <Header theme="light" />

  <div class="min-h-screen bg-parchment">
    <!-- Hero Section -->
    <section class="relative bg-ink text-white py-16 md:py-24 overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0 bg-gradient-to-br from-parchment/20 to-transparent"></div>
      </div>

      <div class="max-w-6xl mx-auto px-6 relative z-10">
        <a href="/" class="inline-block text-white/80 hover:text-white mb-6 transition-colors">
          ← Back to Home
        </a>
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-heading font-bold mb-4">
          The Secret Toad
        </h1>
        <p class="text-2xl md:text-3xl text-white/90 italic font-serif">
          A mission of pestilent proliferation
        </p>
      </div>
    </section>

    <!-- Product Section -->
    <section class="max-w-6xl mx-auto px-6 py-16 md:py-24">
      <div class="grid md:grid-cols-2 gap-12 items-start">
        <!-- Product Image (Sticky) -->
        <div class="md:sticky md:top-24">
          <div class="bg-white p-8 rounded-lg shadow-xl border-2 border-ink/10">
            <img
              src="/images/miscasttoad.jpg"
              alt="The Secret Toad"
              class="w-full h-auto rounded-lg shadow-md"
            />
            <p class="text-center text-sm text-ink/60 mt-4 font-mono">
              * Color selected at random
            </p>
          </div>
        </div>

        <!-- Product Details (Scrollable) -->
        <div>
          <div class="bg-white/50 backdrop-blur-sm p-8 rounded-lg border-2 border-ink/10 mb-8">
            <h2 class="text-3xl font-heading font-bold text-ink mb-6">About This Toad</h2>

            <div class="prose prose-lg max-w-none mb-6">
              <p class="text-ink/80 leading-relaxed mb-4">
                These are hand cast by me and might have minor imperfections or need some hobby love.
              </p>

              <p class="text-ink/80 leading-relaxed mb-4">
                These toads come with a license for recasting that states:
              </p>

              <div class="bg-ink/5 border-l-4 border-ink/40 p-6 my-6 font-mono text-sm">
                <p class="text-ink/90 leading-relaxed mb-4">
                  <em>This toad's mission is to spread copies of its pestilent self all over the world.</em>
                </p>
                <p class="text-ink/90 leading-relaxed mb-4">
                  By owning this toad model you have permission to recast it, modify it and make as many duplicates as you like for personal and commercial use under the following condition:
                </p>
                <p class="text-ink/90 leading-relaxed mb-4">
                  <strong>All recasts of this model and modifications to it must also include a copy of and follow this license.</strong>
                </p>
                <p class="text-ink/90 leading-relaxed">
                  Love from<br/>
                  <strong>Trent Holbrook</strong>
                </p>
              </div>

              <p class="text-ink/80 leading-relaxed">
                <strong>Note:</strong> These Toads come in a variety of colors and will be selected at random.
              </p>
            </div>
          </div>

          <!-- PayPal Checkout -->
          <div class="bg-ink text-white p-8 rounded-lg text-center">
            <h3 class="text-2xl font-heading font-bold mb-4">Purchase Your Toad</h3>
            <div class="text-3xl font-heading font-bold text-white/90 mb-2">$20 USD</div>
            <p class="text-white/60 text-sm mb-6">Shipping included</p>
            <p class="text-white/80 mb-6">
              Ready to join the mission of pestilent proliferation?
            </p>

            <!-- PayPal Button Container -->
            <div id="paypal-button-container" class="max-w-sm mx-auto mb-4"></div>

            <p class="text-xs text-white/60 mt-6 font-mono">
              Secure checkout via PayPal
            </p>
          </div>
        </div>
      </div>
    </section>

    <Footer />
  </div>

  <!-- PayPal SDK -->
  <script is:inline src="https://www.paypal.com/sdk/js?client-id=AcTDschY_JcH7clEgpRGPb20YoAgtrOknsKujlO-VwmnfvD5410lsrTbpf3Q1VWm1airWv8xLTg1znIU&currency=USD"></script>

  <!-- PayPal Button Configuration -->
  <script is:inline>
    // Wait for PayPal SDK to load
    function initPayPalButton() {
      if (typeof paypal === 'undefined') {
        setTimeout(initPayPalButton, 100);
        return;
      }

      paypal.Buttons({
      // Set up the transaction
      createOrder: function(data, actions) {
        return actions.order.create({
          purchase_units: [{
            description: 'The Secret Toad - Hand Cast Miniature with Recast License',
            amount: {
              currency_code: 'USD',
              value: '20.00'
            },
            custom_id: 'toad001'
          }]
        });
      },

      // Finalize the transaction
      onApprove: function(data, actions) {
        return actions.order.capture().then(function(orderData) {
          // Show success message
          const container = document.getElementById('paypal-button-container');
          container.innerHTML = `
            <div class="bg-green-500/20 border-2 border-green-500 rounded-lg p-6 text-white">
              <div class="text-4xl mb-4">✅</div>
              <h4 class="text-xl font-bold mb-2">Order Complete!</h4>
              <p class="text-sm mb-2">Thank you for your purchase!</p>
              <p class="text-xs font-mono">Order ID: ${orderData.id}</p>
              <p class="text-sm mt-4">You will receive a confirmation email shortly.</p>
            </div>
          `;
        });
      },

      // Handle errors
      onError: function(err) {
        console.error('PayPal Error:', err);
        const container = document.getElementById('paypal-button-container');
        container.innerHTML = `
          <div class="bg-red-500/20 border-2 border-red-500 rounded-lg p-6 text-white">
            <div class="text-4xl mb-4">❌</div>
            <h4 class="text-xl font-bold mb-2">Payment Error</h4>
            <p class="text-sm">Something went wrong. Please try again.</p>
          </div>
        `;
      }
    }).render('#paypal-button-container');
    }

    // Start initialization
    initPayPalButton();
  </script>
</BaseLayout>
