---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import PageHeader from '../../components/PageHeader.astro';
import PostCard from '../../components/PostCard.astro';
import Footer from '../../components/Footer.astro';
import StructuredData from '../../components/StructuredData.astro';
import ContentContainer from '../../components/ContentContainer.astro';
import { getPublishedPosts, groupByCategory, sortByDate } from '../../utils/collections';
import { getPartyDisplay, getPartyDescription, getAllParties } from '../../utils/parties';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const publishedPosts = getPublishedPosts(allPosts);
  const categoriesMap = groupByCategory(publishedPosts);

  return Array.from(categoriesMap.entries()).map(([category, posts]) => ({
    params: { category: category.toLowerCase().replace(/\s+/g, '-') },
    props: { category, posts: sortByDate(posts) },
  }));
}

const { category, posts } = Astro.props;

// For Dramatis Personae category, group by party
const isDramatisPersonae = category.toLowerCase() === 'dramatis personae';
const partiesWithMembers = isDramatisPersonae
  ? getAllParties().map(party => ({
      party,
      display: getPartyDisplay(party),
      description: getPartyDescription(party),
      members: posts.filter(post => post.data.party === party),
    })).filter(p => p.members.length > 0)
  : [];
const unassignedCharacters = isDramatisPersonae
  ? posts.filter(post => !post.data.party)
  : [];

// For Campaign Chronicles category, separate campaign hubs from episodes
const isCampaignChronicles = category.toLowerCase() === 'campaign chronicles';
const campaignHubs = isCampaignChronicles
  ? posts.filter((post) => post.data.campaignType === 'hub')
  : [];
const campaignEpisodes = isCampaignChronicles
  ? posts.filter((post) => post.data.campaignType === 'episode')
      .sort((a, b) => {
        // Sort by campaign name first, then by episode number
        const campaignA = a.data.campaign || '';
        const campaignB = b.data.campaign || '';
        if (campaignA !== campaignB) return campaignA.localeCompare(campaignB);
        return (a.data.episodeNumber || 0) - (b.data.episodeNumber || 0);
      })
  : [];

// For Resources category, separate hubs from other content
const isResourcesCategory = category.toLowerCase() === 'resources';
const hubPosts = isResourcesCategory
  ? posts.filter((post) => post.data.resourceType === 'hub')
  : [];
const nonHubPosts = isResourcesCategory
  ? posts.filter((post) => post.data.resourceType !== 'hub')
  : posts;

// Extract unique game names from hub posts for filtering
const gameFilters = hubPosts.map((hub) => {
  // Get the primary game tag (first non-generic tag)
  const gameTag = hub.data.tags?.find(
    (tag) => !['resources', 'wargaming'].includes(tag.toLowerCase())
  );
  return {
    name: hub.data.title.replace(' Resources', ''),
    tag: gameTag?.toLowerCase() || '',
  };
}).filter((game) => game.tag);
---

<BaseLayout title={`${category} - The Hobbinomicon`}>
  <StructuredData
    type="breadcrumb"
    data={{
      breadcrumbs: [
        { name: 'Home', url: 'https://hobbinomicon.com/' },
        { name: 'Categories', url: 'https://hobbinomicon.com/categories' },
        { name: category, url: `https://hobbinomicon.com/categories/${category.toLowerCase().replace(/\s+/g, '-')}` },
      ],
    }}
  />
  <Header theme="light" />

  <main id="main-content" class="min-h-screen bg-parchment dark:bg-parchment-dark">
    <PageHeader
      title={category}
      description={`${posts.length} ${posts.length === 1 ? 'post' : 'posts'}`}
      breadcrumbs={[
        { label: "Categories", href: "/categories" },
        { label: category, href: `/categories/${category.toLowerCase().replace(/\s+/g, '-')}` }
      ]}
    />

    <ContentContainer class="py-16">
      {isResourcesCategory && hubPosts.length > 0 && (
        <section class="mb-16">
          <h2 class="text-2xl md:text-3xl font-heading font-bold text-ink dark:text-ink-dark mb-2">
            Resource Hubs
          </h2>
          <p class="text-ink/70 dark:text-ink-dark/70 text-lg mb-8">
            Main resource pages for each game
          </p>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {hubPosts.map((post) => (
              <PostCard post={post} showCategory={false} />
            ))}
          </div>
        </section>
      )}

      {isResourcesCategory && nonHubPosts.length > 0 && (
        <div class="mt-12">
          <h2 class="text-2xl md:text-3xl font-heading font-bold text-ink dark:text-ink-dark mb-2">
            Guides & Articles
          </h2>
          <p class="text-ink/70 dark:text-ink-dark/70 text-lg mb-4">
            Strategy guides, checklists, and reference articles
          </p>

          {/* Game Filter Buttons */}
          {gameFilters.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-8" id="game-filters">
              <button
                type="button"
                class="filter-btn px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 bg-ink dark:bg-ink-dark text-parchment dark:text-parchment-dark"
                data-filter="all"
              >
                All Games
              </button>
              {gameFilters.map((game) => (
                <button
                  type="button"
                  class="filter-btn px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 bg-ink/10 dark:bg-ink-dark/20 text-ink dark:text-ink-dark hover:bg-ink/20 dark:hover:bg-ink-dark/30"
                  data-filter={game.tag}
                >
                  {game.name}
                </button>
              ))}
            </div>
          )}

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="articles-grid">
            {nonHubPosts.map((post) => (
              <div class="article-card" data-tags={post.data.tags?.map(t => t.toLowerCase()).join(',') || ''}>
                <PostCard post={post} showCategory={false} />
              </div>
            ))}
          </div>
        </div>
      )}

      {/* Dramatis Personae - Show by Party */}
      {isDramatisPersonae && partiesWithMembers.length > 0 && (
        <div class="space-y-16">
          {partiesWithMembers.map((partyData) => (
            <section>
              <div class="flex items-center justify-between mb-4">
                <h2 class="text-2xl md:text-3xl font-heading font-bold text-ink dark:text-ink-dark">
                  {partyData.display}
                </h2>
                <a
                  href={`/parties/${partyData.party}`}
                  class="text-sm font-medium text-ink/70 dark:text-ink-dark/70 hover:text-ink dark:hover:text-ink-dark transition-colors"
                >
                  View Party â†’
                </a>
              </div>
              {partyData.description && (
                <p class="text-ink/70 dark:text-ink-dark/70 text-lg mb-8 max-w-2xl">
                  {partyData.description}
                </p>
              )}
              <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
                {partyData.members.map((member) => (
                  <a
                    href={`/blog/${member.slug}`}
                    class="group relative aspect-[2/3] overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300"
                  >
                    <img
                      src={member.data.heroImage || '/images/placeholder.jpg'}
                      alt={member.data.heroImageAlt || member.data.title}
                      class="absolute inset-0 w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-500"
                      loading="lazy"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-ink via-ink/50 to-transparent opacity-60 group-hover:opacity-80 transition-opacity duration-300"></div>
                    <div class="absolute inset-0 flex flex-col items-center justify-end p-4">
                      <h3 class="text-lg font-heading font-bold text-white text-center drop-shadow-lg">
                        {member.data.title}
                      </h3>
                    </div>
                  </a>
                ))}
              </div>
            </section>
          ))}

          {/* Unassigned Characters */}
          {unassignedCharacters.length > 0 && (
            <section>
              <h2 class="text-2xl md:text-3xl font-heading font-bold text-ink dark:text-ink-dark mb-8">
                Other Characters
              </h2>
              <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
                {unassignedCharacters.map((member) => (
                  <a
                    href={`/blog/${member.slug}`}
                    class="group relative aspect-[2/3] overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300"
                  >
                    <img
                      src={member.data.heroImage || '/images/placeholder.jpg'}
                      alt={member.data.heroImageAlt || member.data.title}
                      class="absolute inset-0 w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-500"
                      loading="lazy"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-ink via-ink/50 to-transparent opacity-60 group-hover:opacity-80 transition-opacity duration-300"></div>
                    <div class="absolute inset-0 flex flex-col items-center justify-end p-4">
                      <h3 class="text-lg font-heading font-bold text-white text-center drop-shadow-lg">
                        {member.data.title}
                      </h3>
                    </div>
                  </a>
                ))}
              </div>
            </section>
          )}
        </div>
      )}

      {/* Campaign Chronicles - Show campaign hubs then episodes */}
      {isCampaignChronicles && (
        <div class="space-y-16">
          {/* Campaign Hubs */}
          {campaignHubs.length > 0 && (
            <section>
              <h2 class="text-2xl md:text-3xl font-heading font-bold text-ink dark:text-ink-dark mb-2">
                Campaigns
              </h2>
              <p class="text-ink/70 dark:text-ink-dark/70 text-lg mb-8">
                Ongoing adventures and their stories
              </p>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {campaignHubs.map((post) => (
                  <PostCard post={post} showCategory={false} />
                ))}
              </div>
            </section>
          )}

          {/* Campaign Episodes */}
          {campaignEpisodes.length > 0 && (
            <section>
              <h2 class="text-2xl md:text-3xl font-heading font-bold text-ink dark:text-ink-dark mb-2">
                Episodes
              </h2>
              <p class="text-ink/70 dark:text-ink-dark/70 text-lg mb-8">
                Individual sessions and chapters
              </p>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {campaignEpisodes.map((post) => (
                  <PostCard post={post} showCategory={false} />
                ))}
              </div>
            </section>
          )}
        </div>
      )}

      {/* Default grid for other categories */}
      {!isResourcesCategory && !isDramatisPersonae && !isCampaignChronicles && (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => (
            <PostCard post={post} showCategory={false} />
          ))}
        </div>
      )}
    </ContentContainer>

    <Footer />
  </main>

  {isResourcesCategory && (
    <script>
      function initFilters() {
        const filterBtns = document.querySelectorAll('.filter-btn');
        const articleCards = document.querySelectorAll('.article-card');

        if (filterBtns.length === 0) return;

        filterBtns.forEach((btn) => {
          btn.addEventListener('click', () => {
            const filter = btn.getAttribute('data-filter');

            // Update button styles
            filterBtns.forEach((b) => {
              b.classList.remove('bg-ink', 'dark:bg-ink-dark', 'text-parchment', 'dark:text-parchment-dark');
              b.classList.add('bg-ink/10', 'dark:bg-ink-dark/20', 'text-ink', 'dark:text-ink-dark');
            });
            btn.classList.remove('bg-ink/10', 'dark:bg-ink-dark/20', 'text-ink', 'dark:text-ink-dark');
            btn.classList.add('bg-ink', 'dark:bg-ink-dark', 'text-parchment', 'dark:text-parchment-dark');

            // Filter cards
            articleCards.forEach((card) => {
              const tags = card.getAttribute('data-tags') || '';
              if (filter === 'all' || tags.includes(filter)) {
                card.style.display = '';
              } else {
                card.style.display = 'none';
              }
            });
          });
        });
      }

      // Initialize on page load
      initFilters();

      // Re-initialize after view transitions
      document.addEventListener('astro:after-swap', initFilters);
    </script>
  )}
</BaseLayout>
