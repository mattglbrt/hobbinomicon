---
interface Props {
  title: string;
  subtitle: string;
  backLink?: {
    href: string;
    text: string;
  };
}

const { title, subtitle, backLink } = Astro.props;
---

<section class="relative bg-ink text-white py-24 md:py-32 pt-44 md:pt-48 overflow-hidden">
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0 bg-gradient-to-br from-parchment/20 to-transparent"></div>
  </div>

  <div class="max-w-4xl mx-auto px-6 relative z-10">
    {backLink && (
      <a href={backLink.href} class="inline-block text-white/80 hover:text-white mb-6 transition-colors">
        ‚Üê {backLink.text}
      </a>
    )}
    <h1 class="text-5xl md:text-6xl lg:text-7xl font-heading font-bold mb-6">
      {title}
    </h1>
    <p class="text-2xl md:text-3xl text-white/90 italic font-serif leading-relaxed">
      {subtitle}
    </p>
  </div>
</section>
