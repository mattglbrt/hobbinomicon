---
const { game } = Astro.props;
---

<a href={`/games/${game.slug}`} class="block bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
  {game.cover_url && (
    <img
      src={game.cover_url}
      alt={game.title}
      class="w-full h-48 object-cover"
    />
  )}

  <div class="p-4">
    <h3 class="text-xl font-bold mb-2">{game.title}</h3>
    {game.description && (
      <p class="text-gray-600 text-sm mb-4">{game.description.slice(0, 100)}...</p>
    )}
    
    {game.tags && game.tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {game.tags.slice(0, 3).map((tag) => (
          <span class="bg-gray-200 text-gray-800 px-2 py-1 rounded-full text-xs">
            {tag}
          </span>
        ))}
      </div>
    )}
  </div>
</a>
