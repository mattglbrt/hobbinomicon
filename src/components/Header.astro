---
import DarkModeToggle from './DarkModeToggle.astro';

interface Props {
  theme?: 'light' | 'dark';
  containerWidth?: 'full' | 'content' | 'wide';
}

const { theme = 'dark', containerWidth = 'full' } = Astro.props;

// Container width classes based on prop
const containerClass = {
  full: 'max-w-7xl',
  content: 'max-w-3xl',
  wide: 'max-w-6xl',
}[containerWidth];
---

<style>
  .glass-nav {
    background: rgba(26, 22, 20, 0.7);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .nav-link {
    position: relative;
    color: rgba(255, 255, 255, 0.8);
    transition: all 0.2s ease;
  }

  .nav-link:hover {
    color: rgba(255, 255, 255, 1);
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.8), transparent);
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .icon-btn {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.2s ease;
  }

  .icon-btn:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.25);
    transform: translateY(-1px);
  }

  #mobile-menu {
    animation: slideDown 0.3s ease-out;
    transform-origin: top;
  }

  #mobile-menu.hidden {
    display: none;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .mobile-link {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.2s ease;
  }

  .mobile-link:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.25);
  }
</style>

<header
  id="main-header"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-300"
  data-theme={theme}
>
  <nav class="px-4 py-3 md:px-6 md:py-4">
    <div class={`${containerClass} mx-auto`}>
      <div class="glass-nav rounded-2xl px-4 py-3 md:px-6 md:py-4">
        <div class="flex justify-between items-center">
          <!-- Logo Section -->
          <a href="/" class="transition-all hover:opacity-80 hover:scale-105">
            <img
              src="/images/logo.svg"
              alt="The Hobbinomicon"
              class="h-7 md:h-9 w-auto"
            />
          </a>

          <!-- Desktop Navigation Links -->
          <div class="hidden md:flex items-center gap-1">
            <a href="/blog" class="nav-link px-4 py-2 text-sm font-medium tracking-wide">
              Blog
            </a>
            <a href="/projects" class="nav-link px-4 py-2 text-sm font-medium tracking-wide">
              Projects
            </a>
            <a href="/categories/resources" class="nav-link px-4 py-2 text-sm font-medium tracking-wide">
              Resources
            </a>
            <a href="/categories" class="nav-link px-4 py-2 text-sm font-medium tracking-wide">
              Categories
            </a>
            <a href="/tags" class="nav-link px-4 py-2 text-sm font-medium tracking-wide">
              Tags
            </a>
            <a href="/about" class="nav-link px-4 py-2 text-sm font-medium tracking-wide">
              About
            </a>
            <a href="/contact" class="nav-link px-4 py-2 text-sm font-medium tracking-wide">
              Contact
            </a>

            <div class="w-px h-6 bg-white/20 mx-2"></div>

            <button
              type="button"
              class="icon-btn p-2.5 rounded-xl"
              data-search-trigger
              aria-label="Search posts (Cmd+K)"
              title="Search (âŒ˜K)"
            >
              <svg class="w-4 h-4 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </button>
            <DarkModeToggle />
          </div>

          <!-- Mobile Controls -->
          <div class="flex md:hidden items-center gap-2">
            <button
              type="button"
              class="icon-btn p-2.5 rounded-xl text-white/80"
              data-search-trigger
              aria-label="Search posts"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </button>
            <DarkModeToggle />
            <button
              id="mobile-menu-button"
              class="icon-btn p-2.5 rounded-xl text-white/80"
              aria-label="Toggle mobile menu"
              aria-expanded="false"
            >
              <svg id="hamburger-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
              <svg id="close-icon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Mobile Navigation Menu -->
        <div id="mobile-menu" class="hidden md:hidden mt-4 pt-4 border-t border-white/10">
          <div class="flex flex-col gap-2">
            <a href="/blog" class="mobile-link px-4 py-3 rounded-xl text-white/80 text-sm font-medium text-center">
              Blog
            </a>
            <a href="/projects" class="mobile-link px-4 py-3 rounded-xl text-white/80 text-sm font-medium text-center">
              Projects
            </a>
            <a href="/categories/resources" class="mobile-link px-4 py-3 rounded-xl text-white/80 text-sm font-medium text-center">
              Resources
            </a>
            <a href="/categories" class="mobile-link px-4 py-3 rounded-xl text-white/80 text-sm font-medium text-center">
              Categories
            </a>
            <a href="/tags" class="mobile-link px-4 py-3 rounded-xl text-white/80 text-sm font-medium text-center">
              Tags
            </a>
            <a href="/about" class="mobile-link px-4 py-3 rounded-xl text-white/80 text-sm font-medium text-center">
              About
            </a>
            <a href="/contact" class="mobile-link px-4 py-3 rounded-xl text-white/80 text-sm font-medium text-center">
              Contact
            </a>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  function initHeader() {
    const header = document.getElementById('main-header');
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const hamburgerIcon = document.getElementById('hamburger-icon');
    const closeIcon = document.getElementById('close-icon');

    // Mobile menu toggle
    if (mobileMenuButton && mobileMenu && hamburgerIcon && closeIcon) {
      mobileMenuButton.addEventListener('click', () => {
        const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';

        // Toggle menu visibility
        mobileMenu.classList.toggle('hidden');

        // Toggle icons
        hamburgerIcon.classList.toggle('hidden');
        closeIcon.classList.toggle('hidden');

        // Update aria-expanded for accessibility
        mobileMenuButton.setAttribute('aria-expanded', String(!isExpanded));
      });

      // Close menu when clicking a link
      const mobileLinks = mobileMenu.querySelectorAll('a');
      mobileLinks.forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu.classList.add('hidden');
          hamburgerIcon.classList.remove('hidden');
          closeIcon.classList.add('hidden');
          mobileMenuButton.setAttribute('aria-expanded', 'false');
        });
      });

      // Close menu on escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !mobileMenu.classList.contains('hidden')) {
          mobileMenu.classList.add('hidden');
          hamburgerIcon.classList.remove('hidden');
          closeIcon.classList.add('hidden');
          mobileMenuButton.setAttribute('aria-expanded', 'false');
          mobileMenuButton.focus();
        }
      });
    }

    // Header scroll behavior
    if (header) {
      let lastScroll = 0;
      const scrollThreshold = 100;

      function handleScroll() {
        const currentScroll = window.scrollY;

        // Don't hide header at the very top of the page
        if (currentScroll <= scrollThreshold) {
          header.style.transform = 'translateY(0)';
          header.style.opacity = '1';
          return;
        }

        // Scrolling down - hide header
        if (currentScroll > lastScroll && currentScroll > scrollThreshold) {
          header.style.transform = 'translateY(-100%)';
          header.style.opacity = '0';
          // Close mobile menu when hiding header
          if (mobileMenu && !mobileMenu.classList.contains('hidden')) {
            mobileMenu.classList.add('hidden');
            hamburgerIcon?.classList.remove('hidden');
            closeIcon?.classList.add('hidden');
            mobileMenuButton?.setAttribute('aria-expanded', 'false');
          }
        }
        // Scrolling up - show header
        else if (currentScroll < lastScroll) {
          header.style.transform = 'translateY(0)';
          header.style.opacity = '1';
        }

        lastScroll = currentScroll;
      }

      // Throttle scroll events for better performance
      let ticking = false;
      window.addEventListener('scroll', () => {
        if (!ticking) {
          window.requestAnimationFrame(() => {
            handleScroll();
            ticking = false;
          });
          ticking = true;
        }
      }, { passive: true });
    }
  }

  // Initialize on first load
  initHeader();

  // Re-initialize after View Transitions navigation
  document.addEventListener('astro:after-swap', initHeader);
</script>
