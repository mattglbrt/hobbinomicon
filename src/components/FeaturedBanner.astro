---
const { game } = Astro.props;
---

<section class="relative w-full h-[400px] md:h-[500px] bg-cover bg-center" style={`background-image: url('${game.cover}');`}>
  <div class="absolute inset-0 bg-black bg-opacity-60 flex flex-col justify-center items-center text-center px-4">
    <h2 class="text-3xl md:text-5xl font-bold text-white mb-4">{game.title}</h2>
    <p class="text-white max-w-2xl">{game.description}</p>
    <a href={`/games/${game.slug}`} class="mt-6 inline-block bg-red-600 text-white px-6 py-3 rounded-lg text-lg hover:bg-red-700 transition">
      Learn More
    </a>
  </div>
</section>
