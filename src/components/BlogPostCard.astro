---
const { post } = Astro.props;
---

<a href={`/blog/${post.slug}`} class="block bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
  {post.data.featuredImage && (
    <img
      src={post.data.featuredImage}
      alt={post.data.title}
      class="w-full h-48 object-cover"
    />
  )}

  <div class="p-4">
    <h3 class="text-lg font-bold mb-2">{post.data.title}</h3>
    <p class="text-gray-600 text-sm mb-4">
      {post.data.description.length > 100 ? `${post.data.description.slice(0, 100)}...` : post.data.description}
    </p>
    <div class="flex items-center justify-between text-xs text-gray-500">
      <span>{post.data.category}</span>
      <span>{new Date(post.data.pubDate).toLocaleDateString()}</span>
    </div>
  </div>
</a>
