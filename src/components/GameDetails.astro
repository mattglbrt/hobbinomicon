---
const { game } = Astro.props;
---

<section class="py-12">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Game Banner -->
    {game.cover_url && (
      <div class="w-full h-[50vh] bg-cover bg-center rounded-lg mb-12" style={`background-image: url(${game.cover_url})`}></div>
    )}

    <!-- Title and Description -->
    <h1 class="text-4xl font-bold mb-4">{game.title}</h1>
    <p class="text-gray-700 mb-8">{game.description}</p>

    <!-- Game Details -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <div>
        <h2 class="text-2xl font-semibold mb-2">Game Details</h2>
        <ul class="text-gray-600 space-y-1">
          {game.publication_year && <li><strong>Published:</strong> {game.publication_year}</li>}
          {game.min_players && <li><strong>Players:</strong> {game.min_players}â€“{game.max_players}</li>}
          {game.play_time && <li><strong>Play Time:</strong> {game.play_time}</li>}
          {game.age_range && <li><strong>Age Range:</strong> {game.age_range}</li>}
        </ul>
      </div>

      <div>
        <h2 class="text-2xl font-semibold mb-2">Official Links</h2>
        <ul class="text-gray-600 space-y-1">
          {game.official_website && (
            <li><a href={game.official_website} class="text-red-600 hover:underline" target="_blank" rel="noopener noreferrer">Official Website</a></li>
          )}
          {game.rules_url && (
            <li><a href={game.rules_url} class="text-red-600 hover:underline" target="_blank" rel="noopener noreferrer">Rules</a></li>
          )}
        </ul>
      </div>
    </div>

    <!-- Tags -->
    {game.tags && game.tags.length > 0 && (
      <div class="mt-8">
        <h2 class="text-2xl font-semibold mb-4">Tags</h2>
        <div class="flex flex-wrap gap-3">
          {game.tags.map((tag) => (
            <a href={`/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`} class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-3 py-1 rounded-full text-sm">
              {tag}
            </a>
          ))}
        </div>
      </div>
    )}
  </div>
</section>
