---
import Breadcrumbs, { type BreadcrumbItem } from './Breadcrumbs.astro';

interface Props {
  title: string;
  description?: string;
  backLink?: {
    href: string;
    text: string;
  };
  breadcrumbs?: BreadcrumbItem[];
}

const { title, description, backLink, breadcrumbs } = Astro.props;
---

<header class="bg-ink text-white py-16 pt-36 md:pt-40">
  <div class="max-w-7xl mx-auto px-6">
    {breadcrumbs && breadcrumbs.length > 0 && (
      <Breadcrumbs items={breadcrumbs} />
    )}
    {backLink && !breadcrumbs && (
      <a href={backLink.href} class="inline-block text-white/80 hover:text-white mb-4 transition-colors">
        ‚Üê {backLink.text}
      </a>
    )}
    <h1 class="text-5xl md:text-6xl font-heading font-bold">{title}</h1>
    {description && (
      <p class="text-xl text-white/80 mt-4">{description}</p>
    )}
  </div>
</header>
