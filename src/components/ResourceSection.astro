---
/**
 * ResourceSection Component
 * Groups ResourceCards with a header and optional description
 */

interface Props {
  /** Section title */
  title: string;
  /** Optional section description */
  description?: string;
  /** Grid columns: 1, 2, or 3 */
  columns?: 1 | 2 | 3;
}

const { title, description, columns = 1 } = Astro.props;

const gridClasses = {
  1: 'grid-cols-1',
  2: 'grid-cols-1 md:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
};
---

<section class="my-10">
  <div class="mb-6">
    <h2 class="text-2xl md:text-3xl font-heading font-bold text-ink dark:text-ink-dark">
      {title}
    </h2>
    {description && (
      <p class="mt-2 text-ink/70 dark:text-ink-dark/70 text-lg">
        {description}
      </p>
    )}
  </div>
  <div class:list={['not-prose grid gap-4', gridClasses[columns]]}>
    <slot />
  </div>
</section>
