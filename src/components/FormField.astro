---
interface Props {
  id: string;
  name: string;
  label: string;
  type?: 'text' | 'email' | 'textarea';
  required?: boolean;
  placeholder?: string;
  rows?: number;
}

const {
  id,
  name,
  label,
  type = 'text',
  required = false,
  placeholder = '',
  rows = 6
} = Astro.props;

const inputClasses = "w-full px-4 py-3 bg-white dark:bg-parchment-dark border-2 border-ink/20 dark:border-ink-dark/20 rounded-lg focus:border-ink dark:focus:border-ink-dark focus:outline-none focus:ring-2 focus:ring-ink/20 dark:focus:ring-ink-dark/20 transition-colors text-ink dark:text-ink-dark";
---

<div>
  <label for={id} class="block text-lg font-heading font-bold text-ink dark:text-ink-dark mb-2">
    {label} {required && <span class="text-red-600">*</span>}
  </label>
  {type === 'textarea' ? (
    <textarea
      id={id}
      name={name}
      required={required}
      rows={rows}
      class={`${inputClasses} resize-y`}
      placeholder={placeholder}
    ></textarea>
  ) : (
    <input
      type={type}
      id={id}
      name={name}
      required={required}
      class={inputClasses}
      placeholder={placeholder}
    />
  )}
</div>
