---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---
<section>
  <Wrapper
  variant="standard"
  class="lg:h-[90dvh] flex flex-col h-full items-center justify-center py-12"
  >
    <div class="max-w-sm mx-auto">
      <div>
        <Text
          tag="h1"
          variant="textBase"
          class="text-base-900 font-display font-medium"
        >
          Create your account
        </Text>
        <Text
          tag="p"
          variant="textSM"
          class="tracking-tight text-base-500 text-balance"
        >
          Join us today! Fill out the form below to sign up for an account.
        </Text>
      </div>
      <form
      action="#"
      method="POST"
      class=" relative before:absolute after:absolute before:bg-base-950 after:bg-base-950/10 before:top-0 before:left-0 before:h-px before:w-6 after:top-0 after:right-0 after:left-8 after:h-px pt-4 mt-2"
    >
      <div class="flex flex-col gap-y-2">
        <!-- Email Field -->
        <div>
          <label for="email" class="text-sm text-base-500 font-medium">Email</label>
          <div class="mt-1">
            <input
              type="email"
              name="email"
              id="email"
              autocomplete="email"
              required
              aria-required="true"
              aria-describedby="email-error"
              class="block w-full h-10 px-4 py-2 text-sm text-accent-700 border border-transparent rounded-lg appearance-none duration-300 bg-base-100 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 focus:ring-offset-base-200"
            />
            <span id="email-error" class="text-red-600 text-sm hidden">
              Please enter a valid email address.
            </span>
          </div>
        </div>
        <!-- Password Field -->
        <div>
          <label for="password" class="text-sm text-base-500 font-medium">Password</label>
          <div class="mt-1">
            <input
              type="password"
              name="password"
              id="password"
              autocomplete="new-password"
              required
              aria-required="true"
              aria-describedby="password-error"
              class="block w-full h-10 px-4 py-2 text-sm text-accent-700 border border-transparent rounded-lg appearance-none duration-300 bg-base-100 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 focus:ring-offset-base-200"
            />
            <span id="password-error" class="text-red-600 text-sm hidden">
              Please enter a valid password.
            </span>
          </div>
        </div>
        <!-- Confirm Password Field -->
        <div>
          <label for="confirm-password" class="text-sm text-base-500 font-medium">Confirm Password</label>
          <div class="mt-1">
            <input
              type="password"
              name="confirm-password"
              id="confirm-password"
              autocomplete="new-password"
              required
              aria-required="true"
              aria-describedby="confirm-password-error"
              class="block w-full h-10 px-4 py-2 text-sm text-accent-700 border border-transparent rounded-lg appearance-none duration-300 bg-base-100 focus:bg-transparent focus:outline-none focus:ring-accent-500 focus:ring-offset-2 focus:ring-2 focus:ring-offset-base-200"
            />
            <span id="confirm-password-error" class="text-red-600 text-sm hidden">
              Passwords do not match.
            </span>
          </div>
        </div>
        <!-- Terms and Conditions Checkbox -->
        <div class="flex items-center gap-3">
          <input
            id="terms"
            name="terms"
            type="checkbox"
            required
            class="size-4 rounded border-base-300 text-accent-600 focus:ring-accent-600"
          />
          <label for="terms" class="text-sm text-base-500 font-medium">
            I agree to the <a href="/terms" class="text-accent-500 hover:underline">Terms of Service</a>
          </label>
        </div>
      </div>
      <!-- Submit Button -->
      <div class="mt-2">
        <Button type="submit" size="sm" variant="accent" class="w-full">
          Sign up
        </Button>
      </div>
    </form>
      <Text tag="p" variant="textSM" class="text-base-500 mt-4">
        Already have an account?
        <a
          class="leading-normal text-accent-500 font-medium hover:text-base-500"
          href="/forms/sign-in"
        >
          Sign in
        </a>
      </Text>
    </div>
  </Wrapper>
</section>
