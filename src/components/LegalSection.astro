---
interface Props {
  title: string;
  level?: 2 | 3;
}

const { title, level = 2 } = Astro.props;
---

<section class="mb-12">
  {level === 2 ? (
    <h2 class="text-3xl font-heading font-bold text-ink dark:text-ink-dark mb-4">{title}</h2>
  ) : (
    <h3 class="text-2xl font-heading font-bold text-ink dark:text-ink-dark mb-3 mt-6">{title}</h3>
  )}
  <slot />
</section>
